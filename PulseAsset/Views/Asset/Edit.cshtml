@model PulseAsset.Models.AssetModel

@{
    ViewBag.Title = "Edit Asset";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-4 mb-4">
        <h1>Edit Asset</h1>
    </div>
    <div class="row">
        <form asp-controller="Asset" asp-action="Edit">
            <input type="hidden" asp-for="AssetId" value="@Model.AssetId"/>
            <div class="row">
                <div class="form-group mb-3 col-md-6">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-6">
                    <label asp-for="SerialNumber"></label>
                    <input asp-for="SerialNumber" class="form-control" value="@Model.SerialNumber"/>
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3 col-md-12">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" value="@Model.Price"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="PurchaseDate"></label>
                    <input asp-for="PurchaseDate" class="form-control" value="@Model.PurchaseDate"/>
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="DisposalDate"></label>
                    <input asp-for="DisposalDate" class="form-control" value="@Model.DisposalDate"/>
                    <span asp-validation-for="DisposalDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Owner"></label>
                    <select asp-for="UserId" asp-items="ViewBag.UserList" class="form-control">
                        @if (Model.Owner == null)
                        {
                            <option value="">Select an Owner</option>
                        }
                        else
                        {
                            <option value="@Model.UserId">@Model.Owner.Email</option>
                        }
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Location"></label>
                    <select asp-for="LocationId" asp-items="ViewBag.Locations" class="form-control">
                        @if (Model.Location == null)
                        {
                            <option value="">Select a Location</option>
                        }
                        else
                        {
                            <option value="@Model.LocationId">@Model.Location.Name</option>
                        }
                    </select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Category"></label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                        @if (Model.Category == null)
                        {
                            <option value="">Select a Category</option>
                        }
                        else
                        {
                            <option value="@Model.CategoryId">@Model.Category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary col-md-12">Update</button>
        </form>
    </div>
</div>