@model IEnumerable<PulseAsset.Models.AssetModel>

@{
    ViewBag.Title = "Search Results";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-4 mb-4">
        <h1>Search Results for <em>@ViewBag.SearchQuery</em></h1>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Serial Number</th>
                <th>Purchase Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="align-middle">
            @foreach (var asset in Model)
            {
                <tr>
                    <td>@asset.Name</td>
                    <td>@asset.Description</td>
                    <td>@asset.SerialNumber</td>
                    <td>@asset.Price</td>
                    <td>
                        <div class="hstack gap-2">
                            <form asp-controller="Asset" asp-action="Edit" method="get">
                                <input type="hidden" name="id" value="@asset.AssetId" />
                                <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-fill"></i></button>
                            </form>
                            <form asp-controller="Asset" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@asset.AssetId"/>
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                            </form>
                        </div>
                    </td>       
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>