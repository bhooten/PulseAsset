@model PulseAsset.Models.ViewModels.ReportingFormViewModel

@{
    ViewBag.Title = "Reporting";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-4 mb-4">
        <h1>Generate Report</h1>
        <p>Select the filters you want to apply to the reporting, then select the Submit button.</p>
    </div>
    <div class="row">
        <form asp-controller="Reporting" asp-action="Generate">
            <div class="row">
                <div class="form-group mb-3 col-md-6">
                    <label asp-for="LowerPrice"></label>
                    <input asp-for="LowerPrice" class="form-control"/>
                    <span asp-validation-for="LowerPrice" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-6">
                    <label asp-for="UpperPrice"></label>
                    <input asp-for="UpperPrice" class="form-control"/>
                    <span asp-validation-for="UpperPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Owner"></label>
                    <select multiple asp-for="UserId" asp-items="ViewBag.Owners" class="form-control"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Location"></label>
                    <select multiple asp-for="LocationId" asp-items="ViewBag.Locations" class="form-control"></select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Category"></label>
                    <select multiple asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary col-md-12">Submit</button>
        </form>
    </div>
</div>