@model PulseAsset.Models.LocationModel

@{
    ViewBag.Title = "Edit Location";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-4 mb-4">
        <div class="col-md-11">
            <h1>Edit Location</h1>
        </div>
        <div class="col-md-1">
            <a asp-action="Locations" asp-controller="Settings">
                <button type="submit" class="btn btn-outline-secondary col-md-12">
                    <i class="bi bi-arrow-left"></i>&nbsp;Back
                </button>
            </a>
        </div>
    </div>
    <div class="row">
        <form asp-controller="Asset" asp-action="Edit">
            <input type="hidden" asp-for="LocationId" value="@Model.LocationId"/>
            <div class="row">
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-8">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" value="@Model.Address"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary col-md-12">Update</button>
        </form>
    </div>
</div>