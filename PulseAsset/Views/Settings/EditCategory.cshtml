@model PulseAsset.Models.CategoryModel

@{
    ViewBag.Title = "Edit Category";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-4 mb-4">
        <div class="col-md-11">
            <h1>Edit Category</h1>
        </div>
        <div class="col-md-1">
            <a asp-action="Categories" asp-controller="Settings">
                <button type="submit" class="btn btn-outline-secondary col-md-12">
                    <i class="bi bi-arrow-left"></i>&nbsp;Back
                </button>
            </a>
        </div>
    </div>
    <div class="row">
        <form asp-controller="Settings" asp-action="EditCategory">
            <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId"/>
            <div class="row">
                <div class="form-group mb-3 col-md-4">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-8">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary col-md-12">Update</button>
        </form>
    </div>
</div>